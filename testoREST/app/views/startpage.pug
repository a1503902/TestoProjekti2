extends layout.pug

block content.
    <div class="ui container">
    <img  id="argLogo" class="ui centered image" src="static/assets/img/logo.jpg">

      <div class="ui three column grid">
        <div class="column"></div>
        <div class="column">
          <form class="ui form">
            <h2>Kuljettaja</h2>
                <input type="text" id="name" placeholder="Nimi">
